<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.boyu.kiss.mapper.ActivityMapper">
	<!-- 查询指定个数活动首页广告 -->
	<select id="getAdList" resultType="Advertisement">
		select 
		*
		from t_advertisement
		<where>
			<if test="marketid != null">
				marketid = #{marketid}
			</if>
		</where>
		<if test="total != null and total != 0">
		limit 0 , #{total}
		</if>
	</select>
	<!-- 查询指定个数特价或热销商品 -->
	<select id="getAcList" resultType="ActivityDetail">
		select * from t_activitydetails
		<where>
			<if test="marketid != null">
				marketid = #{marketid}
			</if>
			<if test="activityid != null">
				activityid = #{activityid}
			</if>
		</where>
		<if test="total != null and total != 0">
		limit 0 , #{total}
		</if>
	</select>
</mapper>